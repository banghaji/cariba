<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/body_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/timestamp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/default_button_height"
        android:background="@color/timestamp"
        android:orientation="horizontal"
        tools:ignore="DisableBaselineAlignment">

        <LinearLayout
            android:id="@+id/layout_sort"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@color/googlekeep"
            android:gravity="center">

            <TextView
                android:text="@string/cheaper"
                android:textStyle="normal"
                android:textColor="@color/text_color"
                android:layout_width="wrap_content"
                android:textSize="15sp"
                android:layout_height="wrap_content" />

            <CheckBox android:id="@+id/c1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onCheckboxClicked"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_filter"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@color/googlekeep"
            android:gravity="center">

            <TextView
                android:text="@string/vendor"
                android:textStyle="normal"
                android:textColor="@color/text_color"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <CheckBox android:id="@+id/c2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onCheckboxClicked"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_tanggal"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@color/googlekeep"
            android:gravity="center">

            <Button
                android:id="@+id/buttonresearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="7dp"
                android:background="@drawable/re_search_button_shape"
                android:text="@string/research"
                android:textAllCaps="false"
                android:textColor="@color/textButton"
                android:textSize="15sp"
                android:textStyle="normal" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>